{
    "version": "0.4.5",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/AddisonCalles/streetzero"
    },
    "keywords": [
        "game",
        "framework",
        "microframework",
        "html",
        "canvas"
    ],
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test",
        "test:coverage": "npm test -- --coverage",
        "test:watch": "tsdx test --watchAll",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "make:badges": "istanbul-badges-readme --coverageDir='./coverage'",
        "build2": "npm run build & xcopy dist \"../juego-cohetes/node_modules/streetzero/dist/\" /s"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint && npm run test:coverage && npm run make:badges && git add 'README.md'"
        }
    },
    "jest":{
        "coverageReporters": ["json-summary"]
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "streetzero",
    "author": "Addison Calles",
    "module": "dist/streetzero.esm.js",
    "size-limit": [
        {
            "path": "dist/streetzero.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/streetzero.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@babel/preset-typescript": "^7.16.0",
        "@size-limit/preset-small-lib": "^7.0.3",
        "@types/jest": "^27.5.0",
        "husky": "^7.0.4",
        "istanbul-badges-readme": "^1.8.1",
        "jest": "^27.1.0",
        "jest-canvas-mock": "^2.4.0",
        "size-limit": "^7.0.4",
        "ts-jest": "^27.1.0",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.1",
        "typescript": "^4.5.2"
    },
    "dependencies": {}
}
